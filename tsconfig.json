{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": false
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "tests/"
  ]
}
